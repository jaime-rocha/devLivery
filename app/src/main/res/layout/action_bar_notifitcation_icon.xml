<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/icono_carrito"
        android:src="@drawable/shopping_blanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/badge_carrito"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/text_xl"
        android:textSize="@dimen/text_lg"
        android:textColor="@color/text"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@null"
        android:layout_alignTop="@id/icono_carrito"
        android:layout_alignRight="@id/icono_carrito"
        android:layout_marginRight="0dp"
        android:layout_alignEnd="@id/icono_carrito"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="@dimen/padding_sm"
        android:paddingBottom="2dp"
        android:paddingRight="@dimen/padding_sm"
        android:paddingLeft="@dimen/padding_sm"
        android:background="@drawable/badge_carrito"/>
</RelativeLayout>