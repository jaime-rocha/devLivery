<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/lyItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="@dimen/card_elevation"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorDemo"
        app:cardCornerRadius="@dimen/card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgImagen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gustu_tabla" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/greatvibes_regular"
                        android:gravity="end"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblMonto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/greatvibes_regular"
                        android:gravity="end"
                        android:padding="@dimen/padding_md"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold"
                        tools:text="108 Bs" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99ffffff"
                android:fontFamily="@font/arizonia_regular"
                android:gravity="end"
                android:padding="@dimen/padding_xl"
                android:text="goasda"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_demo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/padding_xl"
                android:layout_marginRight="@dimen/padding_xl"
                android:layout_marginBottom="@dimen/padding_xl"
                android:orientation="horizontal">


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>